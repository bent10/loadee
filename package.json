{
  "name": "loadee",
  "description": "A utility for loading and parsing YAML, JSON, and JS files.",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/loadee",
  "license": "MIT",
  "keywords": [
    "util-loader",
    "loader",
    "load",
    "file",
    "config",
    ".rc",
    "object",
    "js",
    "javascript",
    "json",
    "yml",
    "yaml"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run build && npm run watch",
    "watch": "chokidar \"src/*.ts\" -c \"npm run build\"",
    "lint": "tsc --noEmit && eslint \"./src\" --ext \".ts\" --cache --cache-location \"node_modules/.cache/.eslintcache\"",
    "build": "swc \"./src\" -d \"dist\" && tsc -d --emitDeclarationOnly",
    "test": "node --experimental-vm-modules --no-warnings ./node_modules/jest/bin/jest.js --verbose",
    "coverage": "npm test -- --coverage"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "doogu": "^2.4.31"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "eslintConfig": {
    "extends": "./node_modules/doogu/config/eslint.json"
  },
  "prettier": "doogu/config/prettier.json",
  "jest": {
    "transform": {
      "^.*.ts$": [
        "@swc/jest"
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "watchPathIgnorePatterns": [
      "<rootDir>/test/fixtures"
    ],
    "clearMocks": true,
    "coverageDirectory": "coverage"
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "changelog.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "changelog.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}

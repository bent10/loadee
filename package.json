{
  "name": "loadee",
  "description": "A utility for loading and parsing YAML, JSON, and JS files.",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/loadee",
  "license": "MIT",
  "keywords": [
    "util-loader",
    "loader",
    "load",
    "file",
    "config",
    ".rc",
    "object",
    "js",
    "javascript",
    "json",
    "yml",
    "yaml"
  ],
  "engines": {
    "node": ">=12"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run build && doogu watch",
    "lint": "doogu lint --types",
    "build": "doogu build --types=dist --minify",
    "test": "ava --verbose",
    "coverage": "c8 -r lcov -r text npm test"
  },
  "dependencies": {
    "js-yaml": "4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "4.0.5",
    "ava": "4.2.0",
    "c8": "7.11.2",
    "doogu": "1.1.1",
    "ts-node": "10.7.0"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "experiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ],
    "ignoredByWatcher": [
      "{coverage,dist}/**",
      "test/fixtures/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "changelog.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "changelog.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}

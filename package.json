{
  "name": "loadee",
  "description": "A utility for loading and parsing YAML, JSON, and JS files.",
  "version": "0.0.0-development",
  "publishConfig": {
    "access": "public"
  },
  "author": "Beni Arisandi (https://stilearning.com)",
  "repository": "https://github.com/bent10/loadee",
  "license": "MIT",
  "keywords": [
    "util-loader",
    "loader",
    "load",
    "file",
    "config",
    ".rc",
    "object",
    "js",
    "javascript",
    "json",
    "yml",
    "yaml"
  ],
  "engines": {
    "node": ">=12.22 <13 || >=14.17 <15 || >=16.4 <17 || >=17"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "readme.md",
    "license"
  ],
  "scripts": {
    "start": "npm run build && ava --watch --verbose",
    "dev": "npm run lib -- --watch",
    "types": "tsc --emitDeclarationOnly",
    "lib": "esbuild src/index.ts src/Error.ts --outdir=dist --format=esm --platform=node --target=node12.22",
    "lint": "tsc --noEmit && eslint src test --ext .ts",
    "build": "npm run lib && npm run types",
    "test": "ava",
    "coverage": "c8 -r lcov -r text npm test"
  },
  "dependencies": {
    "js-yaml": "4.1.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "1.0.1",
    "@types/js-yaml": "4.0.5",
    "@types/node": "17.0.21",
    "@typescript-eslint/eslint-plugin": "5.15.0",
    "@typescript-eslint/parser": "5.15.0",
    "ava": "4.1.0",
    "c8": "7.11.0",
    "esbuild": "0.14.27",
    "eslint": "8.11.0",
    "eslint-config-prettier": "8.5.0",
    "ts-node": "10.7.0",
    "typescript": "4.6.2"
  },
  "ava": {
    "files": [
      "test/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "experiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--no-warnings"
    ],
    "ignoredByWatcher": [
      "{.cache,coverage,src}/**"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "main",
      "next",
      "next-major",
      {
        "name": "beta",
        "prerelease": true
      },
      {
        "name": "alpha",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "changelog.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "changelog.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
